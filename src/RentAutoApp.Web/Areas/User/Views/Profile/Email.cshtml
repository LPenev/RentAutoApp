@model RentAutoApp.Web.ViewModels.UserPanel.ChangeEmailViewModel
@{
	ViewData["Title"] = "Смяна на имейл";
}
@await Html.PartialAsync("~/Areas/User/Views/Shared/_ProfileMenu.cshtml")
<h2>Смяна на имейл</h2>

<form asp-action="Email" method="post">
	@Html.AntiForgeryToken()
	<div class="mb-3">
		<label asp-for="NewEmail"></label>
		<input asp-for="NewEmail" class="form-control" />
		<span asp-validation-for="NewEmail" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Password"></label>
		<input asp-for="Password" class="form-control" />
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<button class="btn btn-primary" type="submit">Смени имейла</button>
</form>
