@using RentAutoApp.Web.ViewModels.Contact
@model ContactFormViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer T

@{
    ViewData["Title"] = T["Contact.Title"];
}

<h1 class="mb-3">@T["Contact.Heading"]</h1>

@if (TempData["ContactOk"] is not null)
{
    <div class="alert alert-success">@T["Contact.Success"]</div>
}

<form asp-action="Index" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="Name" class="form-label">@T["Contact.Name"]</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Email" class="form-label">@T["Contact.Email"]</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Phone" class="form-label">@T["Contact.Phone"]</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Subject" class="form-label">@T["Contact.Subject"]</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Message" class="form-label">@T["Contact.Message"]</label>
        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">@T["Contact.Send"]</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}