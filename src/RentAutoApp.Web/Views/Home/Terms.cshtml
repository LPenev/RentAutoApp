@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer T

@{
	ViewData["Title"] = T["Terms.Title"];

	var returnUrl = Context.Request.Headers["Referer"].ToString();
	if (string.IsNullOrWhiteSpace(returnUrl))
	{
		returnUrl = Url.Action("Index", "Home");
	}
}

<div class="container my-5">
	<h1 class="mb-4">@T["Terms.Heading"]</h1>

	<p>@T["Terms.Intro"]</p>

	<h4>@T["Terms.S1.Title"]</h4>
	<ul>
		<li>@T["Terms.S1.Item1"]</li>
		<li>@T["Terms.S1.Item2"]</li>
	</ul>

	<h4>@T["Terms.S2.Title"]</h4>
	<ul>
		<li>@T["Terms.S2.Item1"]</li>
		<li>@T["Terms.S2.Item2"]</li>
		<li>@T["Terms.S2.Item3"]</li>
	</ul>

	<h4>@T["Terms.S3.Title"]</h4>
	<ul>
		<li>@T["Terms.S3.Item1"]</li>
		<li>@T["Terms.S3.Item2"]</li>
	</ul>

	<h4>@T["Terms.S4.Title"]</h4>
	<ul>
		<li>@T["Terms.S4.Item1"]</li>
	</ul>

	<div class="mt-5">
		<a href="@returnUrl" class="btn btn-outline-secondary">← @T["Terms.Back"]</a>
	</div>

	<p class="mt-4"><strong>@T["Terms.LastUpdated.Label"]</strong> @T["Terms.LastUpdated.Value"]</p>
</div>
