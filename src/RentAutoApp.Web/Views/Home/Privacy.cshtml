@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer T

@{
    ViewData["Title"] = T["Privacy.Title"];
    var returnUrl = Context.Request.Headers["Referer"].ToString();
    if (string.IsNullOrWhiteSpace(returnUrl))
    {
        returnUrl = Url.Action("Index", "Home");
    }
}

<div class="container my-5">
    <h1 class="mb-4">@T["Privacy.Heading"]</h1>

    <p>@T["Privacy.Intro"]</p>

    <h4>@T["Privacy.S1.Title"]</h4>
    <ul>
        <li>@T["Privacy.S1.Item1"]</li>
        <li>@T["Privacy.S1.Item2"]</li>
        <li>@T["Privacy.S1.Item3"]</li>
    </ul>

    <h4>@T["Privacy.S2.Title"]</h4>
    <p>@T["Privacy.S2.Text"]</p>

    <h4>@T["Privacy.S3.Title"]</h4>
    <p>@T["Privacy.S3.Text"]</p>

    <h4>@T["Privacy.S4.Title"]</h4>
    <ul>
        <li>@T["Privacy.S4.Item1"]</li>
        <li>@T["Privacy.S4.Item2"]</li>
        <li>@T["Privacy.S4.Item3"]</li>
    </ul>

    <h4>@T["Privacy.S5.Title"]</h4>
    <ul>
        <li>@T["Privacy.S5.Item1"]</li>
        <li>@T["Privacy.S5.Item2"]</li>
        <li>@T["Privacy.S5.Item3"]</li>
    </ul>

    <div class="mt-5">
        <a href="@returnUrl" class="btn btn-outline-secondary">← @T["Privacy.Back"]</a>
    </div>

    <p class="mt-4"><strong>@T["Privacy.LastUpdated.Label"]</strong> @T["Privacy.LastUpdated.Value"]</p>
</div>