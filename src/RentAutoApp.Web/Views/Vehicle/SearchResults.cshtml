@using RentAutoApp.Web
@using RentAutoApp.Web.ViewModels.Vehicles
@model List<VehicleListItemViewModel>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@{
	ViewData["Title"] = @L["Label.SearchResults"];
	var sd = ViewBag.StartDate as DateTime?;
	var ed = ViewBag.EndDate as DateTime?;
}

<h2 class="mb-3">@L["Label.SearchResults"]</h2>

@if (sd.HasValue && ed.HasValue)
{
	<p class="text-muted">
		@L["Label.ShowingAvailableCarsForPeriod"]
		<strong>@sd.Value.ToString("dd.MM.yyyy")</strong> – <strong>@ed.Value.ToString("dd.MM.yyyy")</strong>.
	</p>
}

@if (!Model.Any())
{
	<div class="alert alert-info">@L["Label.NoCarsFoundAccordingToSpecifiedCriteria"]</div>
}
else
{
	<div class="row">
		@foreach (var car in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow-sm">
					<img src="@car.ImageUrl" class="card-img-top" alt="@car.Title" style="height:200px; object-fit:cover;" />
					<div class="card-body d-flex flex-column">
						<h5 class="card-title">@car.Title</h5>
						<p class="text-muted">@L["Label.Price"] @car.PricePerDay @L["Currency.BGN"]/@L["Label.Day"]</p>
						<a asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary mt-auto">@L["Btn.Details"]</a>
					</div>
				</div>
			</div>
		}
	</div>
}

<a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home">← @L["Btn.Back"]</a>