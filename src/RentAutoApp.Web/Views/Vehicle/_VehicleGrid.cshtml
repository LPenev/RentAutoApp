@using RentAutoApp.Web.ViewModels.Vehicles
@model List<VehicleListItemViewModel>

@if (!Model.Any())
{
	<div class="alert alert-info mt-3">Няма автомобили за показване.</div>
}
else
{
	<div class="row g-3 mt-2">
		@foreach (var car in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow-sm">
					<img src="@car.ImageUrl" class="card-img-top" alt="@car.Title" style="height:200px; object-fit:cover;" />
					<div class="card-body d-flex flex-column">
						<h5 class="card-title">@car.Title</h5>
						<p class="text-muted">Цена: @car.PricePerDay лв/ден</p>
						<a asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary mt-auto">Виж детайли</a>
					</div>
				</div>
			</div>
		}
	</div>
}