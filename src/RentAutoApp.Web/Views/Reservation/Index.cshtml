@using RentAutoApp.Web.ViewModels.Reservations
@model List<ReservationListItemViewModel>
@{
	ViewData["Title"] = "Моите резервации";
}
<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
	<div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
	<div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
	<thead>
	<tr>
		<th>#</th>
		<th>Автомобил</th>
		<th>От</th>
		<th>До</th>
		<th>Статус</th>
		<th>Цена</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var r in Model)
	{
		<tr>
			<td>@r.Id</td>
			<td>@r.VehicleTitle</td>
			<td>@r.StartDate.ToString("yyyy-MM-dd")</td>
			<td>@r.EndDate.ToString("yyyy-MM-dd")</td>
			<td>@r.Status</td>
			<td>@r.PriceCalculated.ToString("0.00")</td>
			<td>
				<a asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Детайли</a>
				<form asp-action="Cancel" asp-route-id="@r.Id" method="post" class="d-inline">
					<button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Сигурни ли сте?')">Отмени</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>