@using RentAutoApp.Web.ViewModels.Reservations
@using RentAutoApp.Web.Infrastructure.Mvc
@model ReservationCreateInputModel
@{
    ViewData["Title"] = "Нова резервация";
}
<h2>@ViewData["Title"]</h2>

<div class="card p-3 shadow-sm">
    <h5>Автомобил: @Model.VehicleTitle</h5>
    @if (Model.PricePerDay.HasValue)
    {
        <p>Цена на ден: @Model.PricePerDay.Value.ToString("0.00") лв.</p>
    }

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="VehicleId" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="PickupLocationId" class="form-label"></label>
                <select asp-for="PickupLocationId" class="form-select" asp-items="Model.Locations.ToSelectList(Model.PickupLocationId)"></select>
                <span asp-validation-for="PickupLocationId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ReturnLocationId" class="form-label"></label>
                <select asp-for="ReturnLocationId" class="form-select" asp-items="Model.Locations.ToSelectList(Model.ReturnLocationId)"></select>
                <span asp-validation-for="ReturnLocationId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Резервирай</button>
        <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@Model.VehicleId" class="btn btn-secondary">Назад</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
