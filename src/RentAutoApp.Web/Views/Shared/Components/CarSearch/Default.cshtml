@model RentAutoApp.Web.ViewComponents.CarSearchFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer T

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="get" asp-controller="Vehicle" asp-action="Search" class="row g-3">
	<div class="col-md-4">
		<label class="form-label">@T["Search.Location"]</label>
		<select asp-for="SelectedLocationId" asp-items="Model.Locations" class="form-select">
			<option value="">-- @T["Search.Select"] --</option>
		</select>
	</div>

	<div class="col-md-4">
		<label class="form-label">@T["Search.CarType"]</label>
		<select asp-for="SelectedSubCategoryId" asp-items="Model.CarTypes" class="form-select">
			<option value="">-- @T["Search.All"] --</option>
		</select>
	</div>

	<div class="col-md-2">
		<label class="form-label">@T["Search.StartDate"]</label>
		<input asp-for="StartDate" type="date" class="form-control" />
	</div>

    <div class="col-md-2">
        <label class="form-label">@T["Search.EndDate"]</label>
        <input asp-for="EndDate" type="date" class="form-control"
               min="@(Model.StartDate.HasValue ? Model.StartDate.Value.AddDays(1).ToString("yyyy-MM-dd") : DateTime.Today.AddDays(1).ToString("yyyy-MM-dd"))"/>
    </div>
    
    <div class="col-12 text-end">
		<button type="submit" class="btn btn-primary">@T["Search.Button"]</button>
	</div>
</form>