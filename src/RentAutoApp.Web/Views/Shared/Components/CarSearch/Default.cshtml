@using RentAutoApp.Web.ViewComponents;
@model CarSearchFormViewModel

<form method="get" asp-controller="Vehicle" asp-action="Search" class="row g-3">
	<div class="col-md-4">
		<label class="form-label">Локация</label>
		<select asp-for="SelectedLocationId" asp-items="Model.Locations" class="form-select">
			<option value="">-- Изберете --</option>
		</select>
	</div>

	<div class="col-md-4">
		<label class="form-label">Тип автомобил</label>
		<select asp-for="SelectedCarTypeId" asp-items="Model.CarTypes" class="form-select">
			<option value="">-- Всички --</option>
		</select>
	</div>

	<div class="col-md-2">
		<label class="form-label">От дата</label>
		<input asp-for="StartDate" type="date" class="form-control" />
	</div>

	<div class="col-md-2">
		<label class="form-label">До дата</label>
		<input asp-for="EndDate" type="date" class="form-control" />
	</div>

	<div class="col-12 text-end">
		<button type="submit" class="btn btn-primary">Търси</button>
	</div>
</form>