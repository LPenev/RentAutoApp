@using Microsoft.AspNetCore.Identity
@using RentAutoApp.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link"
			   asp-controller="Reservation"
			   asp-action="Index">Резервации</a>
		</li>

		<li class="nav-item">
			<a class="nav-link" 
			   asp-area="User" 
			   asp-controller="Profile" 
			   asp-action="Index">Моят профил</a>
		</li>

		<li class="nav-item">
			<a class="nav-link"
			   asp-area="User"
			   asp-controller="Profile"
			   asp-action="Index">Здравей @User.Identity?.Name!</a>
		</li>
		<li class="nav-item">
			<form class="form-inline"
			      asp-area="Identity"
			      asp-page="/Account/Logout"
			      asp-route-returnUrl="@Url.Action("Index","Home", new { area = "" })"
			      method="post">
				@Html.AntiForgeryToken()
				<button type="submit" class="nav-link btn btn-link">Изход</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Вход</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Регистрирай се</a>
		</li>
	}
</ul>