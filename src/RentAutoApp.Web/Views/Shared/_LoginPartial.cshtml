@using Microsoft.AspNetCore.Identity
@using RentAutoApp.Data.Models
@using RentAutoApp.Web
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L


<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link"
			   asp-controller="Reservation"
			   asp-action="Index">@L["Nav.Reservations"]</a>
		</li>

		<li class="nav-item">
			<a class="nav-link"
			   asp-area="User"
			   asp-controller="Profile"
			   asp-action="Index">@L["Nav.Profile"]</a>
		</li>

		<li class="nav-item">
			<a class="nav-link"
			   asp-area="User"
			   asp-controller="Profile"
			   asp-action="Index">
				@string.Format(L["Nav.HelloUser"], User.Identity?.Name)
			</a>
		</li>

		<li class="nav-item">
			<form class="form-inline"
				  asp-area="Identity"
				  asp-page="/Account/Logout"
				  asp-route-returnUrl="@Url.Action("Index","Home", new { area = "" })"
				  method="post">
				@Html.AntiForgeryToken()
				<button type="submit" class="nav-link btn btn-link">@L["Nav.Logout"]</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link" asp-area="Identity" asp-page="/Account/Login">@L["Nav.Login"]</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-area="Identity" asp-page="/Account/Register">@L["Nav.Register"]</a>
		</li>
	}
</ul>
